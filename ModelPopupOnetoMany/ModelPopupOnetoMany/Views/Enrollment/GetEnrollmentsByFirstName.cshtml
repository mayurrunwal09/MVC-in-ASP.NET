@model List<Enrollment> 

@{
    ViewData["Title"] = "Enrollments By First Name";
}

<h1>Enrollments By First Name</h1>

<form method="post" asp-action="GetEnrollmentsByFirstName">
    <div class="form-group">
        <label for="firstName">Enter First Name:</label>
        <input type="text" id="firstName" name="firstName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model != null)
{
    @if (Model.Count > 0)
    {
        <h2>Enrollments for @Model[0].Student.FirstName</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Course Name</th>
                    <!-- Add other relevant columns as needed -->
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model)
                {
                    <tr>
                        <td>@enrollment.Student.FirstName @enrollment.Student.LastName</td>
                        <td>@enrollment.Course.CourseName</td>
                        <!-- Add other relevant columns as needed -->
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No enrollments found for the specified first name.</p>
    }
}
else
{
    <p>An error occurred while retrieving data.</p>
}
