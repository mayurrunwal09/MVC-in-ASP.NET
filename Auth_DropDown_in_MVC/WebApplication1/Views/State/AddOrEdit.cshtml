@model WebApplication1.Models.State 

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.StateId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StateId" />

            <div class="form-group">
                <label asp-for="StateName" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                    </div>
                    <input asp-for="StateName" class="form-control" />
                </div>
                <span asp-validation-for="StateName" class="text-danger"></span>
                <span asp-validation-for="StateName" class="text-danger"></span>
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>