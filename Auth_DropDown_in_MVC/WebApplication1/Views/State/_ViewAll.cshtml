@model IEnumerable<WebApplication1.Models.State >

<h2> Department</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(i=> i.StateId)
            </th>

            <th>
                @Html.DisplayNameFor(i=> i.StateName)
            </th>

            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","State",null,Context.Request.Scheme)','New State')" class="btn btn-success"><i class="fas fa-random"></i>Add State</a>
            </th>

        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.StateId)
                </td>

                <td>
                    @Html.DisplayFor(modelitem => item.StateName)
                </td>
                <td>
                    <div>
                        <a onclick="showInPopup('@Url.Action("AddOrEdit","State",new{id = item.StateId },Context.Request.Scheme)','Edit Dept')" class="btn btn-info"><i class="fas fa-pencil-alt"></i>Edit Department</a>
                        <form asp-action="Delete" asp-route-id="@item.StateId" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>

                </td>
            </tr>
        }
    </tbody>

</table>