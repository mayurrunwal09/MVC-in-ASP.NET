@model IEnumerable<WebApplication1.Models.Employee>

<h2> Employee</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(i=> i.Emp_Id)
            </th>

            <th>
                @Html.DisplayNameFor(i=> i.Emp_Name)
            </th>
            <th>
                @Html.DisplayNameFor(i=> i.Emp_Adress)
            </th>
            <th>
                @Html.DisplayNameFor(i=> i.mobno)
            </th>
            <th>
                @Html.DisplayNameFor(i=> i.age)
            </th>
            <th>
                @Html.DisplayNameFor(i=> i.Sallary)
            </th>
            <th>
                @Html.DisplayNameFor(i=> i.department.Department_Name)
            </th>

            <th>
                @Html.DisplayNameFor(i=> i.State.StateName)
            </th>
            <th>
                @Html.DisplayNameFor(i=> i.City.CityName)
            </th>

            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Employee",null,Context.Request.Scheme)','New Employee')" class="btn btn-success"><i class="fas fa-random"></i>Add Employee</a>
            </th>

        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.Emp_Id)
                </td>

                <td>
                    @Html.DisplayFor(modelitem => item.Emp_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Emp_Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.mobno)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.age)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Sallary)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.department.Department_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.State.StateName)
                </td>

                <td>
                    @Html.DisplayFor(modelitem => item.City.CityName)
                </td>


                <td>
                    <div>
                        <a onclick="showInPopup('@Url.Action("AddOrEdit","Employee",new{id = item.Emp_Id },Context.Request.Scheme)','Edit Emp')" class="btn btn-info">Edit </a>
                        <form asp-action="Delete" asp-route-id="@item.Emp_Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>

                </td>
            </tr>
        }
    </tbody>

</table>