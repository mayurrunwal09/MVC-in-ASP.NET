@model IEnumerable<WebApplication1.Models.City >

<h2> Employee</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(i=> i.CityId )
            </th>

            <th>
                @Html.DisplayNameFor(i=> i.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(i=> i.State .StateName)
            </th>
           

            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","City",null,Context.Request.Scheme)','New City')" class="btn btn-success"><i class="fas fa-random"></i>Add City</a>
            </th>

        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.CityId)
                </td>

                <td>
                    @Html.DisplayFor(modelitem => item.CityName)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.State .StateName)
                </td>
                


                <td>
                    <div>
                        <a onclick="showInPopup('@Url.Action("AddOrEdit","City",new{id = item.CityId },Context.Request.Scheme)','Edit City')" class="btn btn-info">Edit </a>
                        <form asp-action="Delete" asp-route-id="@item.CityId" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>

                </td>
            </tr>
        }
    </tbody>

</table>