@model List<OneToMany1.Models.Department>
@{
}


<h2>Department</h2>

<a asp-action="Create">Add New Employee</a>

<table class="table">
    <thead>
        <tr>
            <th>Department Id</th>
            <th>Name</th>
            <th>Employee</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.DeptId</td>
                <td>@employee.DeptName</td>
                <td>@employee.Employees</td>

                <td>
                    <a asp-action="Details" asp-route-id="@employee.DeptId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@employee.DeptId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@employee.DeptId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

